                        <ComboBox x:Name="combo_choosereservation" materialDesign:HintAssist.Hint="Rezervace na jméno" Style="{StaticResource MaterialDesignFloatingHintComboBox}" SelectionChanged="Combo_choosereservation_SelectionChanged">
