                        <Label x:Name="label_room1" Content="Pokoj číslo : "/>
                        <ComboBox x:Name="combo_roomproducts1" materialDesign:HintAssist.Hint="Produkty" Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                            <ComboBoxItem IsSelected="True" Content="Produkt 1"/>
                        </ComboBox>
                        <TextBox x:Name="txt_productamount1" materialDesign:HintAssist.Hint="Počet kusů" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                        <Button x:Name="btn_addProduct1" Style="{StaticResource MaterialDesignRaisedButton}" ToolTip="Resource name: MaterialDesignRaisedButton" Width="100" Content="PŘIDAT" Margin="0,15" Click="Btn_addProduct1_Click"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox x:Name="groupbox_room2" Header="Zakoupené produkty" Margin="10" Height="210" Width="160" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF1F1F1" Visibility="Hidden">
