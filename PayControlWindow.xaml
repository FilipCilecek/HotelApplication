                        </ComboBox>
                    </StackPanel>
                </GroupBox>
                <GroupBox x:Name="groupbox_room1" Header="Zakoupené produkty" Margin="10,0" Height="210" Width="160" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFF1F1F1" Visibility="Hidden">
